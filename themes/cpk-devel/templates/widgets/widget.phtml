        <a href='/Search/Results?lookFor0[]=&type0[]=AllFields&bool0[]=AND&join=AND&searchTypeTemplate=basic&page=1&keepEnabledFilters=true&limit=<?=$this->layout()->limit?>&sort=<?=$this->layout()->sort?>&filter[]=inspiration:"<?=$this->widget->getName()?>"' title='<?=$this->translate('Show all')?>' style='color: #000;'>
