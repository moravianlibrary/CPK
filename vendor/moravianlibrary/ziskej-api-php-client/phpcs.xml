<?xml version="1.0"?>
<ruleset name="Ruleset_1">
    <!-- Paths to analyse -->
    <file>src/</file>
    <file>tests/</file>

    <!-- Load required sniffs -->
    <config name="installed_paths" value="vendor/slevomat/coding-standard"/>

    <!-- Use custom code standard -->
    <rule ref="vendor/opendevel/coding-standard/ruleset.xml"/>

    <!-- Rules configuration -->
    <rule ref="SlevomatCodingStandard.Files.TypeNameMatchesFileName">
        <properties>
            <property name="rootNamespaces" type="array">
                <element key="src" value="Mzk\ZiskejApi"/>
                <element key="tests" value="Mzk\ZiskejApi"/>
            </property>
        </properties>
    </rule>

</ruleset>
